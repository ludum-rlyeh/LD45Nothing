script/source = "extends Node2D

var MASK_RADIUS_INIT = 0.1
var MASK_RADIUS_FINAL = 1.0
var MASK_GROW_TIMER = 3.0
var ERASE_TIMER = 1.0
var mask_radius = MASK_RADIUS_INIT

func _ready():
	$Drop.set_material($Drop.get_material().duplicate())
	
	$Shape.connect(\"die_sig\", self, \"_on_die\")
	
func build(var points):
	
	var box = Utils.getBBox(points)
	$Drop.position = box.position
	$Shape.position = box.position
	$Shape.build(points)
	
	$Tween.interpolate_property(self, \"mask_radius\", MASK_RADIUS_INIT, MASK_RADIUS_FINAL, MASK_GROW_TIMER,Tween.TRANS_LINEAR, Tween.EASE_IN_OUT)
	$Tween.connect(\"tween_step\", self, \"update_animation_grow_ink\")
	$Tween.connect(\"tween_completed\", self, \"start_moving\")
	$Tween.start()

func update_animation_grow_ink(  object,  key,  elapsed,  value ):
	$Drop.get_material().set_shader_param(\"radius\", mask_radius)
	
func start_moving( object, key):
	$Shape.show()
	$Shape/Particles2D.emitting = true
	$Shape.set_process(true)
	
	$Tween.disconnect(\"tween_step\", self, \"update_animation_grow_ink\")
	$Tween.disconnect(\"tween_completed\", self, \"start_moving\")
	
	$Tween.interpolate_method($Drop, \"set_modulate\", Color(0,0,0,1), Color(0,0,0,0), MASK_GROW_TIMER,Tween.TRANS_LINEAR, Tween.EASE_IN_OUT)
	$Tween.start()

func _on_die():
	call_deferred(\"die\")

func die():
	self.queue_free()"

