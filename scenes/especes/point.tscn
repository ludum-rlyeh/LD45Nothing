var mask_radius = MASK_RADIUS_INIT

func _ready():
	$Drop.set_material($Drop.get_material().duplicate())
	
	$Shape.connect(\"die_sig\", self, \"_on_die\")
	
func build(var points, l_total):
	
	var box = Utils.getBBox(points)
	$Drop.position = box.position
	$Shape.position = box.position
	$Shape.build(points)
	
#	$Tween.interpolate_property(self, \"mask_radius\", MASK_RADIUS_INIT, MASK_RADIUS_FINAL, MASK_GROW_TIMER,Tween.TRANS_LINEAR, Tween.EASE_IN_OUT)
#	$Tween.connect(\"tween_step\", self, \"update_animation_grow_ink\")
